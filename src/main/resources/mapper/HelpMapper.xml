<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="javawebdev.petsns.help.HelpMapper">
<!--    회원용-->
<!--    문의하기-->
    <insert id="save">
        insert into help (nickname, content, registered_at, `check`)
        VALUES (#{nickname}, #{content}, NOW(), #{check});
    </insert>

<!--    내 문의목록-->
    <select id="findAllByNickname" resultType="Help">
        select *
        from help
        where nickname = #{nickname};
    </select>

<!--    개별 문의 조회-->
    <select id="findById" resultType="Help">
        select *
        from help
        where id = #{id};
    </select>
    
<!--    문의 수정-->
    <update id="update">
        update help
        set content = #{content}
        where id = #{id};
    </update>

<!--    문의 삭제-->
    <delete id="delete">
        delete
        from help
        where id = #{id};
    </delete>

<!--    관리자용-->
    <!--    모든 문의 조회-->
    <select id="findAll" resultType="Help">
        select *
        from help;
    </select>

<!--    문의 확인-->
    <update id="checkHelp">
        update help
        set `check` = 1
        where id = #{id};
    </update>
</mapper>